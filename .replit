entrypoint = "main.py"
run = ["streamlit", "run", "main.py", "--server.headless", "true"]

modules = ["python-3.10"]

hidden = [".pythonlibs"]

[nix]
channel = "stable-23_05"

[deployment]
ignorePorts = false
deploymentTarget = "cloudrun"
run = ["sh", "-c", "streamlit run main.py --server.headless true"]

[[ports]]
localPort = 8501
externalPort = 80

[[ports]]
localPort = 8502
externalPort = 3000

[workflows]
runButton = "Streamlit"

[[workflows.workflow]]
name = "Streamlit"
author = 458199

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "streamlit run main.py --server.headless true"
